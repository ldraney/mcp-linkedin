{
  "manifest_version": "0.2",
  "name": "@ldraney/mcp-linkedin",
  "version": "0.1.1",
  "description": "MCP server for managing LinkedIn posts - create text, image, video, document, poll, and multi-image posts. Schedule posts, add comments and reactions.",
  "author": {
    "name": "Lucas Draney"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/intelligent-staffing-systems/mcp-linkedin.git"
  },
  "server": {
    "type": "node",
    "entry_point": "src/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/src/index.js"
      ],
      "env": {
        "LINKEDIN_CLIENT_ID": "${user_config.linkedin_client_id}",
        "LINKEDIN_CLIENT_SECRET": "${user_config.linkedin_client_secret}",
        "LINKEDIN_REDIRECT_URI": "${user_config.linkedin_redirect_uri}",
        "LINKEDIN_PERSON_ID": "${user_config.linkedin_person_id}",
        "LINKEDIN_ACCESS_TOKEN": "${user_config.linkedin_access_token}"
      }
    }
  },
  "user_config": {
    "linkedin_client_id": {
      "type": "string",
      "title": "Client ID",
      "description": "LinkedIn OAuth app client ID",
      "required": true
    },
    "linkedin_client_secret": {
      "type": "string",
      "title": "Client Secret",
      "description": "LinkedIn OAuth app client secret",
      "required": true
    },
    "linkedin_redirect_uri": {
      "type": "string",
      "title": "Redirect URI",
      "description": "OAuth callback URL (e.g., https://localhost:8888/callback)",
      "required": true
    },
    "linkedin_person_id": {
      "type": "string",
      "title": "Person ID",
      "description": "Your LinkedIn person ID (from profile URN)",
      "required": true
    },
    "linkedin_access_token": {
      "type": "string",
      "title": "Access Token",
      "description": "OAuth access token (obtain via linkedin_exchange_code tool after install)",
      "required": false
    }
  },
  "license": "MIT"
}
